<body>
      <h1>Favorites</h1>
      <div class="container">
            <div class="teamdiv" id="leftside">
                  <table class="table table-striped table-dark" id="table" >
                        <h2>Favorite Teams</h2>
                        <thead>
                              <tr>
                                    <th scope="col"></th>
                                    <th scope="col">Team</th>
                                    <th scope="col">Conference</th>
                                    <th scope="col">Division</th>
                                    <th scope="col">Remove Team</th>
                              </tr>
                        </thead>
                        <% for (let i=0; i<hoops.length; i++) { %>
                        <tbody>
                              <tr>
                                    <th scope="row"></th>
                                    <td><%= hoops[i].team %></td> 
                                    <td><%= hoops[i].conference %></td>
                                    <td><%= hoops[i].division %></td>
                                    <td>  <form class="favebuttons" action="/teams/<%=hoops[i]._id %>/?_method=DELETE" method="POST">
                                          <input type="submit" value="Remove Favorite Team" id="favebutton">
                                    </form></td>
                              </tr>
                        </tbody>

                        <% } %>
                  </table>
            </div>
            <div class="playerdiv" id="leftside">
                  <table class="table table-striped table-dark" id="table" >
                        <h2>Favorite Players</h2>
                        <thead>
                              <tr>
                                    <th scope="col"></th>
                                    <th scope="col">First Name</th>
                                    <th scope="col">Last Name</th>
                                    <th scope="col">Position</th>
                                    <th scope="col">Remove Players</th>
                              </tr>
                        </thead>
                        <% for (let i=0; i<players.length; i++) { %>
                        <tbody>
                              <tr>
                                    <th scope="row"></th>
                                    <td><%= players[i].first_name %></td> 
                                    <td><%= players[i].last_name %></td>
                                    <td><%= players[i].position %></td>
                                    <td><form class="favebuttons" action="/players/<%=players[i]._id %>/?_method=DELETE" method="POST">
                                          <input type="submit" value="Remove Favorite Player" id="favebutton">
                                          </form></td>
                              </tr>
                        </tbody>
                        
                  <% } %>
            </table>
